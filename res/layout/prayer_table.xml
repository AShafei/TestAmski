                        android:textSize="6pt" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4"
                        
                        android:textColor="@color/titleColor"
                        android:textSize="6pt" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
